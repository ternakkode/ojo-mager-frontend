<%- include('./../includes/head.ejs')%>

<body>
    <!-- register page -->
    <section class="register">
        <div class="content__register">
            <div class="formBox" >
                <h2>Daftar Akun</h2>
                <div class="formBox__content mt-3">
                    <form id="registerForm">
                        <div class="form-group">
                            <label for="nama">Nama</label>
                            <input type="text" class="form-control" id="name" name="name"  placeholder="Masukkan nama..">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <input type="hidden" name="role" value="user">
                        <button type="submit" class="btn btn-primary">Daftar</button>
                    </form>
                    <div class="loginBox mt-1">
                        <p>Sudah Punya Akun? <a href="/login" class="text-primary">Masuk Disini</a></p>
                    </div>
                </div>
            </div>

            <div class="footer">
                &copy; 2021 OjoMager, Inc All Right Reserved
            </div>
        </div>
        <%- include('./../includes/images.ejs') %>
    </section>
    <!-- end register page -->

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $('#registerForm').submit((e) => {
            e.preventDefault();

            const baseUrl = 'https://ojo-mager-backend.herokuapp.com/api';
            const name = $('#name').val();
            const email = $('#email').val();
            const password = $('#password').val();
            const role = 'user';

            axios({
                method: 'post',
                url: baseUrl + '/users/register',
                data: {
                    name,
                    email,
                    password,
                    role
                }
            }).then(response => {
                console.log('registernya uda sukes');
                const user = response.data.data;
                axios({
                    method: 'post',
                    url: baseUrl + '/users/verification/new',
                    data: {
                        user_id: user.id 
                    }
                }).then(response => {
                    Swal.fire({
                        icon: 'success',
                        title: 'Berhasil!',
                        text: 'Selamat! kamu telah berhasil registrasi pada website OjoMager',
                        showConfirmButton: false,
                        timer: 1000
                    });

                    window.location.replace('/verification?user_id=' + user.id);
                });
                /*
                    @TODO tambah error handling
                */
            });
        });
    </script>
</body>

</html>