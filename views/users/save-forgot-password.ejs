<%- include('./../includes/head.ejs')%>
<body>
    <!-- change password page -->
    <section class="changePassword">
        <div class="content__changePassword">
            <div class="formBox" >
                <div class="formBox__header">
                    <h2>Ganti Password</h2>
                    <p>Untuk melindungi akun Anda, pastikan password Anda:</p>
                    <ul>
                        <li>Panjangnya minimal 7 karakter</li>
                        <li>Menggunakan angka dan simbol</li>
                    </ul>
                </div>
                <div class="formBox__content">
                    <form id="saveForgotPassword">
                        <div class="form-group">
                            <label for="password">Password Baru</label>
                            <input type="password" class="form-control" id="password" placeholder="Masukkan Password">
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Konfirmasi Password Baru</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Konfirmasi Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Ganti Password</button>
                    </form>
                </div>
            </div>

            <div class="footer">
                C 2021 OjoMager, Inc All Right Reserved
            </div>
        </div>
        <%- include('./../includes/images.ejs') %>
    </section>

    <script src="/script/utils.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        const baseUrl = 'https://ojo-mager-backend.herokuapp.com/api';
        const code = getParameterByName('code');
        if (!code) {
            Swal.fire({
                icon: 'error',
                title: 'Gagal',
                text: 'Kode yang anda masukkan tidak valid',
                showConfirmButton: false,
                timer: 1000
            }).then(() => {
                window.location.replace('/');
            });
        }
        
        axios({
            method: 'post',
            url: baseUrl + '/users/forgot-password/validate',
            data: {
                code
            }
        }).catch(err => {
            Swal.fire({
                icon: 'error',
                title: 'Gagal',
                text: 'Kode yang anda masukkan tidak valid',
                showConfirmButton: false,
                timer: 1000
            }).then(() => {
                window.location.replace('/');
            });
        });
        
        $('#saveForgotPassword').submit((e) => {
            e.preventDefault();

            const password = $('#password').val();
            const confirmPassword = $('#confirmPassword').val();

            if (password !== confirmPassword) {
                return Swal.fire({
                    icon: 'error',
                    title: 'Gagal',
                    text: 'Password yang anda masukkan tidak sama',
                });
            }

            axios({
                method: 'post',
                url: baseUrl + 'users/forgot-password/save',
                data: {
                    code,
                    password
                }
            }).then(response => {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Selamat! kamu telah berhasil mereset password akun kamu, silahkan login kembali',
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    window.location.replace('/login');
                });
            });
        });
    </script>
</body>

</html>